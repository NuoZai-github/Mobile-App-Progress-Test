<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PT_Mobile_App.MainPage"
             Title="Jungkook Jeon">

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="0,10,0,0">

            <Grid ColumnDefinitions="Auto, *" Padding="15,0,15,0" ColumnSpacing="20">

                <Border Grid.Column="0"
                        Stroke="Purple"
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 45"
                        HeightRequest="90"
                        WidthRequest="90"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                    <Image Source="owner1.jpeg"
                           Aspect="AspectFill"
                           HeightRequest="90"
                           WidthRequest="90"/>
                </Border>

                <Grid Grid.Column="1" ColumnDefinitions="*,*,*" VerticalOptions="Center">
                    <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
                        <Label Text="9" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Posts" FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                        <Label Text="588M" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Followers" FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
                        <Label Text="$22.6B" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Net Worth" FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                </Grid>
            </Grid>

            <VerticalStackLayout Padding="15,10" Spacing="2">
                <Label Text="Jungkook Jeon" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                <Label Text="Members of BTS" TextColor="Gray" FontSize="13"/>

                <Label FontSize="13" TextColor="Black">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Account managed by " />
                            <Span Text="@bighit_ent" TextColor="#512BD4"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label FontSize="13" TextColor="#512BD4">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="🔗 Free Jungkook Golden Jewellery" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label FontSize="13" Margin="0,5,0,0" TextColor="Black">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Jeon Jung-kook (Korean: 전정국; born September 1, 1997), known mononymously as Jungkook, is a South Korean singer " />
                            <Span Text="... Read More" TextColor="Gray"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </VerticalStackLayout>

            <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never" Margin="0,10,0,15">
                <HorizontalStackLayout Spacing="15" Padding="15,0">

                    <VerticalStackLayout Spacing="5">
                        <Border Stroke="#ddd" StrokeThickness="1" StrokeShape="RoundRectangle 35" HeightRequest="70" WidthRequest="70">
                            <Image Source="image1.jpeg" Aspect="AspectFill"/>
                        </Border>
                        <Label Text="Single#1" FontSize="11" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Border Stroke="#ddd" StrokeThickness="1" StrokeShape="RoundRectangle 35" HeightRequest="70" WidthRequest="70">
                            <Image Source="image2.jpg" Aspect="AspectFill"/>
                        </Border>
                        <Label Text="Single#2" FontSize="11" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Border Stroke="#ddd" StrokeThickness="1" StrokeShape="RoundRectangle 35" HeightRequest="70" WidthRequest="70">
                            <BoxView Color="Black"/>
                        </Border>
                        <Label Text="Single#3" FontSize="11" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Border Stroke="#ddd" StrokeThickness="1" StrokeShape="RoundRectangle 35" HeightRequest="70" WidthRequest="70">
                            <BoxView Color="Red"/>
                        </Border>
                        <Label Text="Single#4" FontSize="11" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>

                </HorizontalStackLayout>
            </ScrollView>

            <Grid ColumnDefinitions="*,*,*" 
                  RowDefinitions="130,130,130" 
                  ColumnSpacing="1" 
                  RowSpacing="1">

                <Image Grid.Row="0" Grid.Column="0" Source="dotnet_bot.png" Aspect="AspectFill" BackgroundColor="#f0f0f0"/>
                <Image Grid.Row="0" Grid.Column="1" Source="dotnet_bot.png" Aspect="AspectFill" BackgroundColor="#fff2cc"/>
                <Image Grid.Row="0" Grid.Column="2" Source="dotnet_bot.png" Aspect="AspectFill" BackgroundColor="#e2e2e2"/>

                <Image Grid.Row="1" Grid.Column="0" Source="dotnet_bot.png" Aspect="AspectFill" BackgroundColor="#d6d6d6"/>
                <Image Grid.Row="1" Grid.Column="1" Source="dotnet_bot.png" Aspect="AspectFill" BackgroundColor="#e6e6e6"/>
                <Image Grid.Row="1" Grid.Column="2" Source="dotnet_bot.png" Aspect="AspectFill" BackgroundColor="#f4f4f4"/>

                <Image Grid.Row="2" Grid.Column="0" Source="dotnet_bot.png" Aspect="AspectFill" BackgroundColor="#cccccc"/>
                <Image Grid.Row="2" Grid.Column="1" Source="dotnet_bot.png" Aspect="AspectFill" BackgroundColor="#dddddd"/>
                <Image Grid.Row="2" Grid.Column="2" Source="dotnet_bot.png" Aspect="AspectFill" BackgroundColor="#eeeeee"/>

            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>