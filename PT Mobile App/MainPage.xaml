<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PT_Mobile_App.MainPage"
             Title="UTS Esports">

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="0,10,0,20">

            <Grid ColumnDefinitions="Auto, *" Padding="15,0,15,0" ColumnSpacing="20">
                <Border Grid.Column="0"
                        Stroke="#009cde" 
                        StrokeThickness="3"
                        StrokeShape="RoundRectangle 45"
                        HeightRequest="90"
                        WidthRequest="90"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                    <Image Source="esport.jpg"
                           Aspect="AspectFill"
                           HeightRequest="90"
                           WidthRequest="90"/>
                </Border>

                <Grid Grid.Column="1" ColumnDefinitions="*,*,*" VerticalOptions="Center">
                    <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
                        <Label Text="9" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Posts" FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                        <Label Text="2.5K" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Followers" FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
                        <Label Text="$22.6B" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Net Worth" FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                </Grid>
            </Grid>

            <VerticalStackLayout Padding="15,10" Spacing="5">
                <Label Text="UTS Esport Club" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                <Label Text="University Club &amp; Community" TextColor="Gray" FontSize="13"/>

                <Label FontSize="13" TextColor="Black">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Follow us " />
                            <Span Text="@utsesports" TextColor="#009cde" FontAttributes="Bold"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label Text="🔗 activateuts.com.au/clubs/esports" FontSize="13" TextColor="#009cde"/>

                <toolkit:Expander x:Name="BioExpander">

                    <toolkit:Expander.Header>
                        <Label FontSize="13" TextColor="Black">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label"
                                             Binding="{Binding Source={RelativeSource AncestorType={x:Type toolkit:Expander}}, Path=IsExpanded}"
                                             Value="True">
                                    <Setter Property="IsVisible" Value="False"/>
                                </DataTrigger>
                            </Label.Triggers>

                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="The official home of gaming at UTS! Join us for competitive leagues, casual gaming nights... " />
                                    <Span Text="Read More" 
                                          TextColor="#009cde" 
                                          FontAttributes="Bold"
                                          TextDecorations="Underline"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </toolkit:Expander.Header>

                    <toolkit:Expander.Content>
                        <VerticalStackLayout Spacing="5">
                            <Label Text="The official home of gaming at UTS! Join us for competitive leagues, casual gaming nights, and our huge end-of-semester LAN parties. We support teams in Valorant, League of Legends, CS2, Rocket League, Overwatch 2, and more. Open to all students!" 
                                   FontSize="13" 
                                   TextColor="Black"/>

                            <Label Text="Read Less ︿" 
                                   FontSize="13" 
                                   TextColor="#009cde" 
                                   FontAttributes="Bold"
                                   TextDecorations="Underline">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="ReadLess_Tapped"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </VerticalStackLayout>
                    </toolkit:Expander.Content>

                </toolkit:Expander>

            </VerticalStackLayout>

            <Grid ColumnDefinitions="*,*,*,*" Padding="15,10" ColumnSpacing="10">
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Border Stroke="#ddd" StrokeShape="RoundRectangle 35" HeightRequest="70" WidthRequest="70">
                        <Image Source="esport.jpg" Aspect="AspectFill"/>
                    </Border>
                    <Label Text="Valorant" FontSize="11" HorizontalOptions="Center" TextColor="Black"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1" Spacing="5">
                    <Border Stroke="#ddd" StrokeShape="RoundRectangle 35" HeightRequest="70" WidthRequest="70">
                        <Image Source="esport.jpg" Aspect="AspectFill"/>
                    </Border>
                    <Label Text="LoL" FontSize="11" HorizontalOptions="Center" TextColor="Black"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="2" Spacing="5">
                    <Border Stroke="#ddd" StrokeShape="RoundRectangle 35" HeightRequest="70" WidthRequest="70">
                        <Image Source="esport.jpg" Aspect="AspectFill"/>
                    </Border>
                    <Label Text="CS2" FontSize="11" HorizontalOptions="Center" TextColor="Black"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="3" Spacing="5">
                    <Border Stroke="#ddd" StrokeShape="RoundRectangle 35" HeightRequest="70" WidthRequest="70">
                        <Image Source="esport.jpg" Aspect="AspectFill"/>
                    </Border>
                    <Label Text="Social" FontSize="11" HorizontalOptions="Center" TextColor="Black"/>
                </VerticalStackLayout>
            </Grid>

            <Grid ColumnDefinitions="*,*,*" 
                  RowDefinitions="130,130,130" 
                  ColumnSpacing="2" 
                  RowSpacing="2"
                  Margin="0,15,0,0">
                <Image Grid.Row="0" Grid.Column="0" Source="a.jpg" Aspect="AspectFill" BackgroundColor="#eee"/>
                <Image Grid.Row="0" Grid.Column="1" Source="b.jpg" Aspect="AspectFill" BackgroundColor="#ddd"/>
                <Image Grid.Row="0" Grid.Column="2" Source="c.jpg" Aspect="AspectFill" BackgroundColor="#ccc"/>
                <Image Grid.Row="1" Grid.Column="0" Source="d.jpg" Aspect="AspectFill" BackgroundColor="#bbb"/>
                <Image Grid.Row="1" Grid.Column="1" Source="e.jpg" Aspect="AspectFill" BackgroundColor="#aaa"/>
                <Image Grid.Row="1" Grid.Column="2" Source="f.jpg" Aspect="AspectFill" BackgroundColor="#999"/>
                <Image Grid.Row="2" Grid.Column="0" Source="g.jpg" Aspect="AspectFill" BackgroundColor="#888"/>
                <Image Grid.Row="2" Grid.Column="1" Source="h.jpg" Aspect="AspectFill" BackgroundColor="#777"/>
                <Image Grid.Row="2" Grid.Column="2" Source="i.jpg" Aspect="AspectFill" BackgroundColor="#666"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>