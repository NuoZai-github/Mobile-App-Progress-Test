<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PT_Mobile_App.MainPage"
             Title="Profile">

    <ContentPage.Resources>
        <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="0,10,0,20">

            <Grid ColumnDefinitions="Auto, *" Padding="15,0,15,0" ColumnSpacing="20">

                <Border Grid.Column="0"
                        Stroke="Purple" 
                        StrokeThickness="3"
                        StrokeShape="RoundRectangle 45"
                        HeightRequest="90"
                        WidthRequest="90"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                    <Image Source="dotnet_bot.png"
                           Aspect="AspectFill"
                           HeightRequest="90"
                           WidthRequest="90"/>
                </Border>

                <Grid Grid.Column="1" ColumnDefinitions="*,*,*" VerticalOptions="Center">
                    <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
                        <Label Text="9" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Posts" FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                        <Label Text="588M" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Followers" FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
                        <Label Text="$22.6B" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Net Worth" FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                </Grid>
            </Grid>

            <VerticalStackLayout Padding="15,10" Spacing="5">
                <Label Text="Jungkook Jeon" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                <Label Text="Members of BTS" TextColor="Gray" FontSize="13"/>
                <Label Text="Account managed by @bighit_ent" FontSize="13" TextColor="Black"/>
                <Label Text="🔗 Free Jungkook Golden Jewellery" FontSize="13" TextColor="#512BD4"/>

                <Label Text="Jeon Jung-kook (Korean: 전정국; born September 1, 1997), known mononymously as Jungkook..." 
                       FontSize="13" 
                       TextColor="Black"
                       MaxLines="1" 
                       LineBreakMode="TailTruncation"
                       IsVisible="{Binding Source={x:Reference BioExpander}, Path=IsExpanded, Converter={StaticResource InvertedBoolConverter}}"/>

                <toolkit:Expander x:Name="BioExpander">
                    <toolkit:Expander.Header>
                        <Label Text="Read More ⌄" 
                               FontSize="13" 
                               TextColor="Gray" 
                               FontAttributes="Bold"/>
                    </toolkit:Expander.Header>
                    <toolkit:Expander.Content>
                        <Label Text="Jeon Jung-kook (Korean: 전정국; born September 1, 1997), known mononymously as Jungkook, is a South Korean singer and songwriter. He is the youngest member and vocalist of the South Korean boy band BTS." 
                               FontSize="13" 
                               TextColor="Black"
                               Margin="0,5,0,0"/>
                    </toolkit:Expander.Content>
                </toolkit:Expander>

            </VerticalStackLayout>

            <Grid ColumnDefinitions="*,*,*,*" Padding="15,10" ColumnSpacing="10">
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Border Stroke="#ddd" StrokeShape="RoundRectangle 35" HeightRequest="70" WidthRequest="70">
                        <Image Source="dotnet_bot.png" Aspect="AspectFill"/>
                    </Border>
                    <Label Text="Single#1" FontSize="11" HorizontalOptions="Center" TextColor="Black"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1" Spacing="5">
                    <Border Stroke="#ddd" StrokeShape="RoundRectangle 35" HeightRequest="70" WidthRequest="70">
                        <Image Source="dotnet_bot.png" Aspect="AspectFill"/>
                    </Border>
                    <Label Text="Single#2" FontSize="11" HorizontalOptions="Center" TextColor="Black"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="2" Spacing="5">
                    <Border Stroke="#ddd" StrokeShape="RoundRectangle 35" HeightRequest="70" WidthRequest="70">
                        <Image Source="dotnet_bot.png" Aspect="AspectFill"/>
                    </Border>
                    <Label Text="Single#3" FontSize="11" HorizontalOptions="Center" TextColor="Black"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="3" Spacing="5">
                    <Border Stroke="#ddd" StrokeShape="RoundRectangle 35" HeightRequest="70" WidthRequest="70">
                        <Image Source="dotnet_bot.png" Aspect="AspectFill"/>
                    </Border>
                    <Label Text="Single#4" FontSize="11" HorizontalOptions="Center" TextColor="Black"/>
                </VerticalStackLayout>
            </Grid>

            <Grid ColumnDefinitions="*,*,*" 
                  RowDefinitions="130,130,130" 
                  ColumnSpacing="2" 
                  RowSpacing="2"
                  Margin="0,15,0,0">

                <Image Grid.Row="0" Grid.Column="0" Source="dotnet_bot.png" Aspect="AspectFill" BackgroundColor="#eee"/>
                <Image Grid.Row="0" Grid.Column="1" Source="dotnet_bot.png" Aspect="AspectFill" BackgroundColor="#ddd"/>
                <Image Grid.Row="0" Grid.Column="2" Source="dotnet_bot.png" Aspect="AspectFill" BackgroundColor="#ccc"/>

                <Image Grid.Row="1" Grid.Column="0" Source="dotnet_bot.png" Aspect="AspectFill" BackgroundColor="#bbb"/>
                <Image Grid.Row="1" Grid.Column="1" Source="dotnet_bot.png" Aspect="AspectFill" BackgroundColor="#aaa"/>
                <Image Grid.Row="1" Grid.Column="2" Source="dotnet_bot.png" Aspect="AspectFill" BackgroundColor="#999"/>

                <Image Grid.Row="2" Grid.Column="0" Source="dotnet_bot.png" Aspect="AspectFill" BackgroundColor="#888"/>
                <Image Grid.Row="2" Grid.Column="1" Source="dotnet_bot.png" Aspect="AspectFill" BackgroundColor="#777"/>
                <Image Grid.Row="2" Grid.Column="2" Source="dotnet_bot.png" Aspect="AspectFill" BackgroundColor="#666"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>